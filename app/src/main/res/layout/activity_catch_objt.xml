<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_catch_objt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a105.catchobjt.CatchObjt">

    <org.opencv.android.JavaCameraView
        android:layout_width="640dp"
        class="org.opencv.android.JavaCameraView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tutorial1_activity_java_surface_view"
        android:visibility="gone"
        android:layout_height="480dp"
        android:background="@drawable/outside"  />

    <TextView
        android:text="Coordinate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Coordinate"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="200dp" />

    <TextView
        android:text="物件座標"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Coordinate"
        android:layout_alignStart="@+id/Coordinate"
        android:id="@+id/Coordinate1"
        android:textSize="25sp"/>

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sofarTime"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="200dp" />

    <TextView
        android:text="現在時間"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sofarTime2"
        android:textSize="25sp"
        android:layout_above="@+id/sofarTime"
        android:layout_alignStart="@+id/sofarTime" />


</RelativeLayout>
